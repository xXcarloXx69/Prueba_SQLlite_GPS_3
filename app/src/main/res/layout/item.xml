<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78D364">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="220dp"
        android:layout_height="494dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_producto_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="producto:"
            android:textColor="#114207"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/txt_precio_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="precio:"
            android:textColor="#114207"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/txt_existencias_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="existencias:"
            android:textColor="#114207"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/txt_local_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="local"
            android:textColor="#114207"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="289dp"
        android:layout_height="140dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="69dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <Button
            android:id="@+id/btn_editar_item"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:background="@drawable/editar" />

        <Button
            android:id="@+id/btn_eliminar_item"
            android:layout_width="137dp"
            android:layout_height="141dp"
            android:background="@drawable/eliminar" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>