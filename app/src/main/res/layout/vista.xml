<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#78D364">

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="317dp"
        android:layout_height="134dp"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="72dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <Button
            android:id="@+id/btn_editar_vista"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/editar" />

        <Button
            android:id="@+id/btn_eliminar_vista"
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:layout_weight="1"
            android:background="@drawable/eliminar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="256dp"
        android:layout_height="439dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="71dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_nombre_vista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Producto:"
            android:textColor="#174C0C"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/txt_precio_vista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textColor="#174C0C"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/txt_existencias_vista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Existencia:"
            android:textColor="#174C0C"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

        <TextView
            android:id="@+id/txt_local_vista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local:"
            android:textColor="#174C0C"
            android:textSize="30sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>